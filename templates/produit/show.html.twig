{% extends 'base.html.twig' %}

{% block title %}{{ produit.nomProduit }}{% endblock %}

{% block body %}




<div class="bodyhome">
    <ul class="breadcrumb">
        <li><a class="href-top" href="/">Home</a> <span class="divider">/</span></li>
        <li><a class="href-top" href="/produits">Produits</a> <span class="divider">/</span></li>
        <li class="href-top active">{{ produit.nomProduit }}</li>
    </ul>
<br>
    <div class="container ">
        <div class="card">
            <div class="card-body card-panier ">
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-sm-6">
                        <div class="white-box text-center"><img src="{{asset('img/'~produit.getCategorie~'/'~produit.getNomProduit~'.jpg')}}" class="img-responsive"></div>
                    </div>
                    <div class="col-lg-7 col-md-7 col-sm-6">
                        <h3 class="card-title text-center m-2 card-title-produit">{{ produit.nomProduit }}</h3>
                        <h6 class="card-subtitle text-center mb-5 card-text card-categorie">{{ produit.categorie }}</h6>
                        <p class="text-center card-description">{{ produit.descriptionProduit|raw }}</p>
                        <h2 class="mt-5 card-description">
                            {{ produit.prixProduit }}<small class="text-success"></small>â‚¬
                        </h2>
                        <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="" data-original-title="Add to cart">
                            <i class="fas fa-cart-plus"></i>
                        </button>
                        {% if app.user %}
                           <a id="btn-panier-acheter" class="btn btn-primary" href="{{ path('panier_add',{'id':produit.id}) }}">Ajouter au panier</a>
                        {% else %}
                            <a id="btn-panier-acheter" class="btn btn-primary"  href="{{ path('app_login')}}">Ajouter au panier</a>
                        {% endif %}



                    </div>
                    <a  id="buttonHeader" class="btn-back-produit"onclick="location.href='/produits'" role="button">Revenir aux produits</a>

                </div>
            </div>
        </div>
    </div>

<br>

</div>





{% endblock %}



