{% extends 'base.html.twig' %}

{% block title %}{{ produit.nomProduit }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex">
            <div class="" id="test">
                <img src="{{ asset('imgs/logobeigenoir.png') }}" width="40%">
            </div>
            <div class="">
                <h1 class="title">{{ produit.nomProduit }}</h1>


            </div>
        </div>
    </div>

    <div class="item">

    </div>

    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-sm-6">
                        <div class="white-box text-center"><img src="https://via.placeholder.com/430x600/00CED1/000000" class="img-responsive"></div>
                    </div>
                    <div class="col-lg-7 col-md-7 col-sm-6">
                        <h3 class="card-title text-center m-2">{{ produit.nomProduit }}</h3>
                        <h6 class="card-subtitle text-center mb-5">{{ produit.categorie }}</h6>
                        <p class="text-center">{{ produit.descriptionProduit|raw }}</p>
                        <h2 class="mt-5">
                            {{ produit.prixProduit }}<small class="text-success"></small>
                        </h2>
                        <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="" data-original-title="Add to cart">
                            <i class="fas fa-cart-plus"></i>
                        </button>
                        {% if app.user %}
                            <button class="btn btn-primary btn-rounded"><a class="text-black" href="{{ path('panier_add',{'id':produit.id}) }}">Ajouter au panier</a></button>
                        {% else %}
                            <button class="btn btn-primary btn-rounded"><a class="text-black" href="{{ path('app_login')}}">Ajouter au panier</a></button>
                        {% endif %}

                        <h3 class="box-title mt-5">Key Highlights</h3>
                        <ul class="list-unstyled">
                            <li><i class="fa fa-check text-success"></i>Sturdy structure</li>
                            <li><i class="fa fa-check text-success"></i>Designed to foster easy portability</li>
                            <li><i class="fa fa-check text-success"></i>Perfect furniture to flaunt your wonderful collectibles</li>
                        </ul>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h3 class="box-title mt-5">Ingredient</h3>
                        {%for ingredient in produit.ingredients %}
                            {{ include('ingredient/show.html.twig') }}
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
    </div>



    <a href="{{ path('produit_index') }}">back to list</a>






{% endblock %}



