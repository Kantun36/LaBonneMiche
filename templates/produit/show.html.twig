{% extends 'base.html.twig' %}

{% block title %}{{ produit.nomProduit }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex">
            <div class="" id="test">
                <img src="{{ asset('imgs/logobeigenoir.png') }}" width="40%">
            </div>
            <div class="">
                <h1 class="title">{{ produit.nomProduit }}</h1>
                <select class="form-select d-inline " id="nombreProduit">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <button class="btn btn-primary d-inline">Ajouter au panier</button>
            </div>
        </div>
    </div>

    <div class="item">

    </div>

    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-sm-6">
                        <div class="white-box text-center"><img src="https://via.placeholder.com/430x600/00CED1/000000" class="img-responsive"></div>
                    </div>
                    <div class="col-lg-7 col-md-7 col-sm-6">
                        <h3 class="card-title text-center m-2">{{ produit.nomProduit }}</h3>
                        <h6 class="card-subtitle text-center mb-5">{{ produit.categorie }}</h6>
                        <p class="text-center">{{ produit.descriptionProduit|raw }}</p>
                        <h2 class="mt-5">
                            {{ produit.prixProduit }}<small class="text-success"></small>
                        </h2>
                        <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="" data-original-title="Add to cart">
                            <i class="fas fa-cart-plus"></i>
                        </button>
                        <button class="btn btn-primary btn-rounded"><a class="text-black" href="{{ path('panier_add',{'id':produit.id}) }}">Acheter</a></button>
                        <h3 class="box-title mt-5">Key Highlights</h3>
                        <ul class="list-unstyled">
                            <li><i class="fa fa-check text-success"></i>Sturdy structure</li>
                            <li><i class="fa fa-check text-success"></i>Designed to foster easy portability</li>
                            <li><i class="fa fa-check text-success"></i>Perfect furniture to flaunt your wonderful collectibles</li>
                        </ul>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h3 class="box-title mt-5">Ingredient</h3>
                        {%for ingredient in produit.ingredients %}
                            {{ include('ingredient/show.html.twig') }}
                        {% endfor %}
                        <div class="table-responsive">
                            <table class="table table-striped table-product">
                                <tbody>

                                {%for ingredient in produit.ingredients %}
                                    {{ ingredient.nomIngredient }}
                                {% endfor %}
                                <tr>
                                    <td width="390">Brand</td>
                                    <td>Stellar</td>
                                </tr>
                                <tr>
                                    <td>Delivery Condition</td>
                                    <td>Knock Down</td>
                                </tr>
                                <tr>
                                    <td>Seat Lock Included</td>
                                    <td>Yes</td>
                                </tr>
                                <tr>
                                    <td>Type</td>
                                    <td>Office Chair</td>
                                </tr>
                                <tr>
                                    <td>Style</td>
                                    <td>Contemporary&amp;Modern</td>
                                </tr>
                                <tr>
                                    <td>Wheels Included</td>
                                    <td>Yes</td>
                                </tr>
                                <tr>
                                    <td>Upholstery Included</td>
                                    <td>Yes</td>
                                </tr>
                                <tr>
                                    <td>Upholstery Type</td>
                                    <td>Cushion</td>
                                </tr>
                                <tr>
                                    <td>Head Support</td>
                                    <td>No</td>
                                </tr>
                                <tr>
                                    <td>Suitable For</td>
                                    <td>Study&amp;Home Office</td>
                                </tr>
                                <tr>
                                    <td>Adjustable Height</td>
                                    <td>Yes</td>
                                </tr>
                                <tr>
                                    <td>Model Number</td>
                                    <td>F01020701-00HT744A06</td>
                                </tr>
                                <tr>
                                    <td>Armrest Included</td>
                                    <td>Yes</td>
                                </tr>
                                <tr>
                                    <td>Care Instructions</td>
                                    <td>Handle With Care,Keep In Dry Place,Do Not Apply Any Chemical For Cleaning.</td>
                                </tr>
                                <tr>
                                    <td>Finish Type</td>
                                    <td>Matte</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ produit.id }}</td>
        </tr>
        <tr>
            <th>NomProduit</th>
            <td>{{ produit.nomProduit }}</td>
        </tr>
        <tr>
            <th>PrixProduit</th>
            <td>{{ produit.prixProduit }}</td>
        </tr>
        <tr>
            <th>QuantiteProduit</th>
            <td>{{ produit.quantiteProduit }}</td>
        </tr>
        <tr>
            <th>PoidsProduit</th>
            <td>{{ produit.poidsProduit }}</td>
        </tr>
        <tr>
            <th>DescriptionProduit</th>
            <td>{{ produit.DescriptionProduit }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}">back to list</a>

    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>

    {{ include('produit/_delete_form.html.twig') }}


{% endblock %}



