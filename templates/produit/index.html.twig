{% extends 'base.html.twig' %}

{% block title %}Nos produits - LaBonneMiche{% endblock %}

{% block body %}
    <div class="container-fluid bodyhome ">
        <ul class="breadcrumb">
            <li class="href-top"><a class="href-top" href="/">Accueil</a> <span class="divider">/</span></li>
            <li class="href-top active">Produits</li>
        </ul>

        <h1 id="tltphare">Produits</h1>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="https://127.0.0.1:8000/admin?crudAction=index&crudControllerFqcn=App%5CController%5CAdmin%5CProduitCrudController&menuIndex=1&signature=TcOv6RHT6xojuR5PqztCpPFyk9N9JZHRt-WswYmntyc&submenuIndex=-1" class="button m-3" id="btn-article-create">Cr√©er un nouvel article</a>
        {% endif %}

        <div class="row">
            {% for produit in produits %}
                <div class="col-3 mb-2 mt-1">
                    <div class="card " style="width: 100%; height:100%;">
                        <img src="{{asset('img/produits/'~ produit.getImageProduit())}}" class="img-responsive" width="auto" height="50%">
                        <div class="card-body card-panier ">
                            <h5 class="card-title">{{ produit.nomProduit }}</h5>
                            <p class="card-text" style="color:#e3b364">{{ produit.descriptionProduit | raw }}</p>
                            <a href="{{ path('produit_show',{'id':produit.id}) }}" class="btn btn-primary mb-3" id="btnregisterlogin">Voir le produit</a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('produit_edit', {'id': produit.id}) }}"  class="btn btn-primary" id="btnregisterlogin">Modifier l'article</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}