{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <div class="container-fluid bodyhome ">
        <ul class="breadcrumb">
            <li class="href-top"><a class="href-top" href="/">Home</a> <span class="divider">/</span></li>
            <li class="href-top active">Produits</li>
        </ul>

        <h1 id="tltphare">Produits</h1>

        <div class="row">
            {% for produit in produits %}
                <div class="col-3 mb-2 mt-1">
                    <div class="card " style="width: 100%; height:100%;">
                        <img src="{{asset('img/'~produit.getCategorie~'/'~produit.getNomProduit~'.jpg')}}" class="img-responsive" width="auto" height="50%">
                        <div class="card-body card-panier ">
                            <h5 class="card-title">{{ produit.nomProduit }}</h5>
                            <p class="card-text">{{ produit.descriptionProduit | raw }}</p>
                            <a href="{{ path('produit_show',{'id':produit.id}) }}" class="btn btn-primary" id="btnregisterlogin">Voir le produit</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}