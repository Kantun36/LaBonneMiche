<!DOCTYPE html>

<html lang="fr">

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

{% block body %}

    <style>
        .banner-image {
            background-image: url('/img/bgimage.jpg');
            background-size: cover;
        }
    </style>

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}


    <section class="vh-100 bg-image" style="background-image: url({{ asset('img/lrbg2.jpg') }}); background-repeat: no-repeat;
            background-size: cover;">
        <div class="banner-image mask d-flex align-items-center h-100">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="background-color: transparent; border-radius:10%;">
                            <div class="card-body p-5 cardlogin">
                                <h2 class="text-center mb-5 titlelogin">Créer un compte</h2>


                                {{ form_start(registrationForm) }}


                                    <div class="row ">
                                        <div class="col-6 ">
                                    <div class="form-outline mb-4 float-left">
                                        {{ form_widget(registrationForm.nom_user, {'attr': {'placeholder': 'Nom *',
                                        'class': 'form-control form-control-lg', 'required': 'true'}}) }}
                                    </div>


                                        </div>
                                        <div class="col-6">
                                            <div class="form-outline mb-4 float-right">
                                                {{ form_widget(registrationForm.prenom_user, {'attr': {'placeholder': 'Prénom *',
                                                    'class': 'form-control form-control-lg', 'required': 'true'}}) }}
                                            </div>
                                        </div>
                                    </div>


                                    <div class="form-outline mb-4">
                                        {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Email *',
                                            'class': 'form-control form-control-lg', 'required': 'true'}}) }}
                                    </div>

                                    <div class="form-outline mb-4">
                                        {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe *',
                                            'class': 'form-control form-control-lg', 'required': 'true'}}) }}
                                    </div>


                                    <div class="row ">
                                        <div class="col-6 ">
                                            <div class="form-outline mb-4">
                                                {{ form_widget(registrationForm.num_tel, {'attr': {'placeholder': 'Numéro de téléphone',
                                                    'class': 'form-control form-control-lg'}}) }}
                                            </div>


                                        </div>
                                        <div class="col-6">
                                            <div class="form-check d-flex justify-content-center mb-5 mt-2">
                                                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input me-2', 'required': 'true'}}) }}
                                                <label class="form-check-label text-center text-muted" for="form2Example3g">
                                                    J'accepte les <a href="/cgu" class="text-center text-muted"><u class="linkregister">CGU</u></a>
                                                </label>
                                            </div>
                                        </div>
                                    </div>






                                    <div class="d-flex justify-content-center">
                                        <input type="submit" value="S'inscrire" id="btnregisterlogin" class="btn btn-success btn-block btn-lg ">
                                    </div>

                                    <p class="text-center text-muted mt-5 mb-0">Déjà un compte ? <a href="/login" class="fw-bold text-body"><u class="linkregister">Connectez-vous</u></a></p>

                                    {{ form_end(registrationForm) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
